{
  "$schema": "https://codepulse.dev/config-schema.json",
  "version": "1.0",
  "project": {
    "name": "MyAwesomeProject",
    "description": "Enterprise application with high security requirements",
    "root": "."
  },
  "scan": {
    "exclude_patterns": [
      "**/node_modules/**",
      "**/__pycache__/**",
      "**/.git/**",
      "**/.venv/**",
      "**/venv/**",
      "**/dist/**",
      "**/build/**",
      "**/*.pyc",
      "**/*.egg-info/**"
    ],
    "include_patterns": [
      "**/*.py",
      "**/*.js",
      "**/*.ts",
      "**/*.java"
    ],
    "max_depth": 10,
    "follow_symlinks": false,
    "ignore_hidden": true
  },
  "ai_engine": {
    "provider": "anthropic",
    "model": "claude-sonnet-4",
    "api_key_env": "ANTHROPIC_API_KEY",
    "temperature": 0.3,
    "max_tokens": 4096,
    "timeout": 60,
    "retry_attempts": 3,
    "enable_caching": true
  },
  "analysis": {
    "enabled": true,
    "max_files_per_run": 50,
    "complexity_threshold": 10,
    "min_score_warning": 70,
    "min_score_error": 50,
    "categories": {
      "security": {
        "enabled": true,
        "weight": 0.3
      },
      "performance": {
        "enabled": true,
        "weight": 0.25
      },
      "quality": {
        "enabled": true,
        "weight": 0.25
      },
      "testing": {
        "enabled": true,
        "weight": 0.2
      }
    }
  },
  "security": {
    "enabled": true,
    "level": "enterprise",
    "checks": {
      "secrets_detection": {
        "enabled": true,
        "severity": "critical",
        "patterns": [
          "aws_keys",
          "github_tokens",
          "api_keys",
          "private_keys",
          "passwords"
        ]
      },
      "sql_injection": {
        "enabled": true,
        "severity": "high"
      },
      "command_injection": {
        "enabled": true,
        "severity": "critical"
      },
      "xss": {
        "enabled": true,
        "severity": "high"
      },
      "path_traversal": {
        "enabled": true,
        "severity": "high"
      },
      "weak_crypto": {
        "enabled": true,
        "severity": "medium"
      }
    },
    "compliance": {
      "owasp_top_10": true,
      "cwe_top_25": true,
      "pci_dss": false,
      "hipaa": false,
      "gdpr": true
    }
  },
  "testing": {
    "auto_generate": {
      "enabled": true,
      "framework": "pytest",
      "coverage_target": 80,
      "include_edge_cases": true
    },
    "test_discovery": {
      "patterns": [
        "**/test_*.py",
        "**/*_test.py",
        "**/tests/**/*.py"
      ]
    }
  },
  "reporting": {
    "format": "html",
    "output_directory": "./reports",
    "filename_template": "pulse_report_{timestamp}",
    "include_sections": {
      "executive_summary": true,
      "detailed_findings": true,
      "code_metrics": true,
      "security_assessment": true,
      "recommendations": true,
      "trend_analysis": true
    },
    "export_formats": [
      "html",
      "pdf",
      "json",
      "markdown"
    ],
    "score_weights": {
      "quality": 0.3,
      "security": 0.3,
      "performance": 0.2,
      "testing": 0.2
    },
    "charts": {
      "enabled": true,
      "types": [
        "score_history",
        "issue_distribution",
        "complexity_heatmap",
        "dependency_graph"
      ]
    }
  },
  "notifications": {
    "enabled": false,
    "channels": {
      "slack": {
        "enabled": false,
        "webhook_url": "https://hooks.slack.com/services/YOUR/WEBHOOK/URL",
        "notify_on": [
          "critical_issues",
          "scan_complete",
          "score_change"
        ]
      },
      "email": {
        "enabled": false,
        "recipients": [
          "team@example.com"
        ],
        "smtp_server": "smtp.gmail.com",
        "smtp_port": 587
      },
      "github": {
        "enabled": false,
        "create_issues": true,
        "severity_threshold": "high"
      }
    }
  },
  "integrations": {
    "ci_cd": {
      "fail_on_score_below": 70,
      "fail_on_critical_issues": true,
      "fail_on_security_score_below": 80
    },
    "git": {
      "pre_commit_hook": false,
      "pre_push_hook": true
    }
  },
  "performance": {
    "parallel_processing": true,
    "max_workers": 4,
    "cache_results": true,
    "cache_ttl": 3600
  },
  "advanced": {
    "custom_rules": [],
    "ignore_rules": [],
    "severity_overrides": {},
    "plugin_directory": "./plugins"
  }
}
